        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "target": "es6",
        "outDir": "./dist",
        "baseUrl": "./src",
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*.ts",
        "config/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
